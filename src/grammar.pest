main = { SOI ~ (funcDecl | externFunc | structDef | enumDef | useModules)* ~ EOI }


// ------------ declarations  ------------ //

funcDecl = { visibility? ~ "fun" ~ id ~ paramsDecl ~ retType? ~ stmts }
    retType = { ":" ~ varType }
    paramsDecl = { "(" ~ ")" |
                "(" ~ paramDecl ~ ("," ~ paramDecl)* ~ ")"
    } 
paramDecl  = { varType ~ id }

externFunc = { visibility? ~ "extern fun" ~ id ~ typesList ~ retType? ~ ";" }
    typesList = { "(" ~ varType* ~ ")" } 

structDef = { visibility? ~ "struct" ~ id ~ structMembersDef }
    structMembersDef = _{ 
        "{" ~ "}"
        | "{" ~ paramDecl ~ ("," ~ paramDecl)* ~ "}" 
        | "{" ~ (paramDecl ~ ",")+ ~ "}" 
    }

enumDef = {visibility? ~ "enum" ~ id ~ "{" ~ (enumVariant ~ ",")* ~ enumVariant? ~ "}" }
    enumVariant = { id ~ namedFileds? }
    namedFileds = { "{" ~ (paramDecl ~ ",")* ~ paramDecl? ~ "}" }

useModules = { "use" ~ module ~ ("," ~ module)* ~ ","?}
module = { id ~ ("/" ~ id)*}

// ------------ statements  ------------ //

stmts = { "{" ~ stmt* ~ "}" }

stmt = { 
    varDeclStmt ~ ";"
    | funCallExpr ~ ";"
    | ifLetStmt
    | ifStmt
    | returnStmt ~ ";"
    | loopStmt
    | whileStmt
    | breakStmt ~ ";"
    | assignStmt ~ ";"
}
                
varDeclStmt = { "let" ~ id ~ (":" ~ varType)? ~ "=" ~ expr }

assignStmt  = { (derefVar | membAccessExpr | id) ~ "=" ~ expr }

ifStmt = { ifBlock ~ (elifBlock* ~ elseBlock)? }
    ifBlock   = { "if" ~ expr ~  stmts }
    elifBlock = { "elif" ~ expr ~ stmts }
    elseBlock = { "else" ~ stmts }

returnStmt = { "ret" ~ expr }

loopStmt = { "loop" ~ stmts }

whileStmt = { "while" ~ expr ~ stmts }

breakStmt = { "break" }

ifLetStmt = { "if let" ~ enm ~ "=" ~ expr ~ stmts ~ ("else" ~ stmts)?}


// ------------ expressions  ------------ //

expr = _{ 
    binaryExpr
    | membAccessExpr
    | unaryExpr
    | funCallExpr
    | value 
}

binaryExpr = { binaryTerm ~ (binaryOp ~ binaryTerm)+ }
binaryTerm = _{ (unaryExpr
                    | membAccessExpr 
                    | funCallExpr 
                    | value) 
                | "(" ~ expr ~ ")" }
binaryOp = _{ add | subtract | multiply | divide | and 
              | or | leq | geq | eq | ne | lt | gt }

unaryExpr = { unaryOp ~ ( expr | "(" ~ expr ~ ")" ) }
unaryOp = _{ not | reference | deref }

funCallExpr  = { (builtinFuncId | normalFuncId) ~ params }
    normalFuncId = { id }
    builtinFuncId = @{ "@" ~ id }
    params = { "(" ~ param* ~ ")" } 
    param =  { valueOrType ~ "," ~ param | valueOrType } 
    valueOrType = { varType | expr }

membAccessExpr = { (derefVar | funCallExpr | id) ~ (member | indice)+ }
derefVar = { deref ~ id }
member = { "." ~ id }
indice = { "[" ~ expr ~ "]" }


// ------------ literal values  ------------ //

value = { float | number | array | enm | strct | boolean | id }

number   = @{ ("-")? ~ ASCII_DIGIT+ }
float    = @{ ("-")? ~ ASCII_DIGIT+ ~ "." ~ ASCII_DIGIT+ }
id       = @{ !reserved ~ "_" * ~ ASCII_ALPHA ~ (ASCII_ALPHANUMERIC | "_" )* }
array    = { "[" ~ "]" |
             "[" ~ expr ~ ("," ~ expr)* ~ "]"
} 

boolean  = { "true" | "false" }

strct = { id ~ structMembers }
    memberDecl = { id ~ "=" ~ expr } 
    structMembers = _{ 
        "{" ~ "}"
        | "{" ~ memberDecl ~ ("," ~ memberDecl)* ~ "}" 
        | "{" ~ (memberDecl ~ ",")+ ~ "}" 
    }

enm = { id ~ ":" ~ id ~ structMembers? } // enum


// ------------ misc ------------ //

varType = { refType | simpleType | arrayType }
    refType = { "&" ~ varType }
    arrayType = { "[" ~ varType ~ ";" ~ number ~ "]" }
    simpleType = @{ "_" * ~ ASCII_ALPHA ~ (ASCII_ALPHANUMERIC | "_" )* }

visibility = { "pub" }

// operands
add       = { "+" }
subtract  = { "-" }
multiply  = { "*" }
divide    = { "/" }
and       = { "&&" }
or        = { "||" }
not       = { "!" }
eq        = { "==" }
ne        = { "!=" }
lt        = { "<" }
gt        = { ">" }
leq       = { "<=" }
geq       = { ">=" }
reference = { "&" }
deref     = { "*" }

reserved = { intTypes | ("f32" | "f64") | "c_voidptr" | keywords}
    intTypes = @{ ("i" | "u") ~ ("8" | "16" | "32" | "64") }
    keywords = { "if" | "while" | "loop" | "for" | "fun" 
                    | "struct" | "enum" | "use" | "break" | "ret" }

COMMENT = _{ "#" ~ (!"\n" ~ ANY)* }
WHITESPACE = _{ " " | "\t" | NEWLINE }
