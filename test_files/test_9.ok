# external function declarations
extern fun print_i64(i64): i16; 
extern fun println(): i16;

fun is_even(i64 a): bool {
    ret (a/2) * 2 == a;
}

fun main(): i8 {
    i64 a = 119827891;
    while a != 1 {
        print_i64(a);
        println();
        if is_even(a) {
            a = a / 2;
        } else {
            a = a * 3 + 1;
        }
    }
    print_i64(a);
    println();
    ret 0; 
}
